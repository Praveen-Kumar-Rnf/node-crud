<%- include('layout/header') %>

  <div class="container">
    <!-- Edit Modal HTML -->
    <!-- <div id="editEmployeeModal" class="modal fade"> -->
      <div class="modal-dialog">
        <div class="modal-header">
          <h4 class="modal-title">Edit User (<%= user.name %>)</h4>
        </div>
        <div class="modal-content">
          <form action="/update/<%= user._id %>" method="post" id="add-form" enctype="multipart/form-data">
            <div class="modal-body">
              <div class="modal-body">
                <div class="form-group">
                  <label>Name</label>
                  <input type="text" name="name" value="<%= user.name %>" class="form-control">
                </div>
                <div class="form-group">
                  <label>Email</label>
                  <input type="email" name="email" value="<%= user.email %>" class="form-control">
                </div>
                <div class="form-group">
                  <label>Phone</label>
                  <input type="text" name="phone" value="<%= user.phone %>" class="form-control">
                </div>
                <div class="form-group">
                  <label>Address</label>
                  <input type="textarea" name="address" value="<%= user.address %>" class="form-control">
                  <!-- <textarea name="address" value="<%= user.email %>" class="form-control"></textarea> -->
                </div>
                <div class="form-group">
                  <label for="image">Select Image</label>
                  <input type="file" class="form-control" name="image">
                  <img src="/<%= user.image %>" width="180" class="img-thumbnail mt-1">
                </div>
                <input type="hidden" name="old_image" value="<%= user.image %>">
              </div>
              <div class="modal-footer">
                <a href="/add" type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">Cancel</a>
                <input type="submit" name="submit" class="btn btn-info" value="Save Updates">
              </div>
          </form>
        </div>
      </div>
    <!-- </div> -->
  </div>

<%- include('layout/footer') %>